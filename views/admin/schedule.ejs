<%- include ('../partials/header'); %>

<%- include ('../partials/adminNav'); %>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
       <form action="/admin/schedule/update/<%=schedule._id%>" method="POST">
          <div class="form-group">
            <label for="title" class="form-control-label">Ndrysho lenden</label>
            <input name="schedule[title]" type="text" class="form-control" value="<%=schedule.title%>">
          </div>

           <div class="form-group">
            <label for="author" class="form-control-label">Ndrysho profesorin</label>
            <input name="schedule[author]" type="text" class="form-control" value="<%=schedule.author%>">
          </div>

          <div class="form-group">
            <label for="category" class="form-control-label">Ndrysho kategorine</label>
            <input name="schedule[category]" type="text" class="form-control" value="<%=schedule.category%>">
          </div>

          <div class="form-group">
            <label for="author" class="form-control-label">Dita e javes</label>
            <input name="schedule[ISBN]" type="text" class="form-control" readonly value="<%=schedule.ditaejaves%>">
          </div>

          <div class="form-group">
            <label for="stock" class="form-control-label">Te lira</label>
            <input name="schedule[stock]" type="number" class="form-control" value="<%=schedule.stock%>">
          </div>

          <div class="form-group">
            <label for="description">Ndyrsho pershkrimin</label>
            <textarea name="schedule[description]" cols="30" rows="10" class="form-control"><%=schedule.description%></textarea>
          </div>

          <button class="btn btn-block btn-primary">Perditeso!</button>
        </form>
    </div>
  </div>
</div>


<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
<script>
  CKEDITOR.replace('schedule[description]');
</script>
<%- include ('../partials/footer'); %>
