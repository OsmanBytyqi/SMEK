<%- include ('../partials/header'); %>

<%- include ('../partials/adminNav'); %>

<div class="container mt-5 pt-2">
    <div class="row">

        <div class="col-md-6">
            <h4 class="text-center card-header pb-3">Informacionet personale</h4>

            <ul class="list-group list-group-flush">
              <li class="list-group-item">Emri :   <%=user.firstName%></li>
              <li class="list-group-item">Mbiemri :   <%=user.lastName%></li>
              <li class="list-group-item">Emri i perdoruesit :   <%=user.username%></li>
              <li class="list-group-item">Antarsuar :    <%=user.joined.toDateString()%></li>
              <li class="list-group-item">Email :  <%=user.email%> </li>
              <li class="list-group-item">Oraret e rezervuara:
                <% issues.forEach(issue => { %>
                    <%=issue.schedule_info.title + ", "%>
                <% }) %>
              </li>
              <li class="list-group-item">Adresa :  <%=user.address%></li>
            </ul>
        </div>
        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
              <div class="card-header text-center">
                <strong>Aktivitet e fundit</strong>
              </div>
              <ul class="list-group list-group-flush">
                  <% for(var i = 0; i < activities.length; i++) { %>
                    <%if(i > 5) break; %>
                    <% if(activities[i].category =="Merr") { %>
                        <li class="list-group-item">
                           <%=user.username%> ka marrur <%=activities[i].info.title%> ne <%=activities[i].entryTime.toDateString()%>
                        </li>
                    <% } else if(activities[i].category =="Anulo") { %>
                        <li class="list-group-item">
                           <%=user.username%> ka kthyer <%=activities[i].info.title%> ne <%=activities[i].entryTime.toDateString()%>
                        </li>
                    <% }  else if(activities[i].category =="Update Profile") { %>
                        <li class="list-group-item">
                           <%=user.username%> perditesoi profilin ne <%=activities[i].entryTime.toDateString()%>
                        </li>
                    <% }  else if(activities[i].category =="Update Password") { %>
                        <li class="list-group-item">
                           <%=user.username%> perditesoi fjalekalimin ne <%=activities[i].entryTime.toDateString()%>
                        </li>
                    <% }   else if(activities[i].category =="Update Password") { %>
                        <li class="list-group-item">
                           <%=user.username%> perditesoi fjalekalimin <%=activities[i].entryTime.toDateString()%>
                        </li>
                    <% } %>
                 <% } %>

                 <%if(activities.length > 6) { %>
                 <a href="/admin/users/activities/<%=user._id%>" class="btn btn-primary btn-block">Shiko te gjitha...</a>
                <% } %>
              </ul>
            </div>
        </div>
    </div>
</div>

<%- include ('../partials/footer'); %>
