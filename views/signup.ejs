<%- include ('partials/header'); %>


<%- include ('partials/alerts'); %>

<section id="usersignUpForm">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card">
          <div class="card-header text-center">
            <h4>Regjistrimi i administratorit</h4>
          </div>
            <div class="card-block">
              <form class="p-3" action="/auth/admin-signup" method="POST">

                <div class="form-group">
                  <label class="form-control-label">Emri i perdoruesit</label>
                  <input type="text" name="username" placeholder="Emri i perdoruesit" class="form-control" required>
                </div>

                <div class="form-group">
                  <label class="form-control-label">Email</label>
                  <input type="email" name="email" placeholder="Email" class="form-control" required>
                </div>

                <div class="form-group">
                  <label class="form-control-label">Fjalekalimi</label>
                  <input type="password" name="password" placeholder="Fjalekalimi" class="form-control" required>
                </div>

                <div class="form-group">
                  <label class="form-control-label">Kodi sekret</label>
                  <input type="text" name="adminCode" placeholder="Shkruani kodin sekret" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Dergo</button>
              </form>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>


<%- include ('partials/footer') %>
